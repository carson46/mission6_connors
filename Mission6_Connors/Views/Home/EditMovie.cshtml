@model Mission6_Connors.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h2 class="text-center">Edit Movie</h2>

<form asp-action="EditMovie" method="post">
    <input type="hidden" asp-for="MovieId" />

    <label>Title:</label>
    <input asp-for="Title" class="form-control" required />
    <br />

    <label>Category:</label>
    <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-control" required>
        <option value="">-- Select Category --</option>
    </select>
    <br />

    <label>Year:</label>
    <input asp-for="Year" class="form-control" type="number" required />
    <br />

    <label>Director:</label>
    <input asp-for="Director" class="form-control" required />
    <br />

    <label>Rating:</label>
    <select asp-for="Rating" class="form-control">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />

    <label>Edited:</label>
    <select asp-for="Edited" class="form-control">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <label>Lent To:</label>
    <input asp-for="LentTo" class="form-control" />
    <br />

    <label>Notes:</label>
    <input asp-for="Notes" class="form-control" maxlength="25" />
    <br />

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a class="btn btn-secondary" asp-action="AllMovies">Cancel</a>
</form>
