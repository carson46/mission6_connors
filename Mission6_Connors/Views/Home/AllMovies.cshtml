@model IEnumerable<Mission6_Connors.Models.Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<h2 class="text-center">Joel Hilton Movie Collection</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lent To</th>
        <th>Notes</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@(movie.Category != null ? movie.Category.CategoryName : "No Category")</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@(movie.Edited ? "Yes" : "No")</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
            <td>@movie.CopiedToPlex</td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="EditMovie" asp-route-id="@movie.MovieId">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="DeleteMovie" asp-route-id="@movie.MovieId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="AddMovie">Add New Movie</a>